<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".SuccessActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical" android:background="@drawable/running_abstract" android:padding="20dp">
        <EditText android:background="?colorSecondary" android:textColor="?colorOnSecondary" android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:ems="10" android:inputType="text" android:text="@string/name_success" android:hint="enter text here"/>

        <RadioGroup android:id="@+id/radioGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="20dp" android:background="@color/fire">
            <RadioButton android:id="@+id/radioButtonPhone1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/num1"/>
            <RadioButton android:id="@+id/radioButtonPhone2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/num2"/>
            <RadioButton android:id="@+id/radioButtonPhone3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/num3"/>
        </RadioGroup>
        <Button android:id="@+id/buttonSendSMS" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/po_aljite_sms" android:layout_marginTop="20dp" android:padding="10dp" app:layout_constraintTop_toBottomOf="@id/textView" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tableHeaderTxt"
        android:textSize="18sp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/fire"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:background="@color/fire"/>


        <Button
            android:id="@+id/btnClearData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:padding="10dp"
            android:background="@android:color/holo_red_light"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>